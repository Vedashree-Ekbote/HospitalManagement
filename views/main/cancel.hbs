  <title>DRLOGIN</title>
  <style>
    *{
    margin:0;
    padding:0;
    box-sizing: border-box;
    font-family: 'Poppins',sans-serif;
}
.headerbody{
    background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(17, 15, 15, 0.5)), url('images/hospital.jpeg');
    width: 100%;
    height: 100vh;
    background-repeat: no-repeat !important;
    background-size: cover !important;
    background-position: center !important;
}
.container{
    height:100vh !important;
    
}
.card{
    margin-top: 15% !important;
    margin-left: 24% !important;
    position: absolute !important;
    width: 450px !important;
    background-color : rgba(5, 33, 88, 0.079) !important;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.8), 0 6px 20px 0 rgba(0, 0, 0, 0.8);;
}

.header{
    color:white;
    text-align: center;
    font-size: 50px;
    font-weight: bold;
    padding: 10px;

}
.input-icons i {
    position: absolute;
}
  
.input-icons {
    width: 100%;
    margin-bottom: 10px;
}

.icon {
    padding: 10px;
    min-width: 50px;
}
  
.input-field {
    width: 100%;
    height: 40px;
    padding: 10px;
    text-align: center;
}
.forgetpass{
    padding: 10px 0px 10px 0px;
}
.forgetpass a{
    font-size: 18px;
    color:white !important;
    font-weight: 600;
}
.forgetpass a:hover{
    color:white !important;
    text-decoration: none;
}
.noaccount{
    color:white !important;
    margin-top: 10px;
    padding-right: 5% !important;
}
.noaccount a:hover{
    text-decoration: none;
}
  </style>
</head>

<body>
  <div class="headerbody">
    <div class="container">
      <div class="card">
        <div class="header card-header">
          Cancel Appointment
        </div>
        <div class="input-icons card-body">
          <form action="/cancel/{{patientid}}">
            {{!-- <div class="form-group">
              <input type="hidden" name="_id">
            </div> --}}
            <div class="form-group">
              <i class="fa fa-lock icon"></i>
              <input type="string"  name="name" class="form-control input-field" id="exampleInputPassword1" placeholder="Name">
            </div>
            <div class="form-group">
              <i class="fa fa-user icon"></i>
              <input type="email"  name="email" class="form-control input-field" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email">
            </div>
            {{!-- <div class="form-group">
              <i class="fa fa-id-card-o icon"></i>
              <input type="string" class="form-control input-field" id="exampleInputID1" placeholder="ID">
            </div> --}}
            
            <button type="submit" class="btn btn-primary text-center w-100">Delete</button>
            
          </form>
        </div>
      </div>
    </div>
  </div>


<script>
    function cancel(){
        alert("Your appointment has been cancelled Successfully!!");
    }
</script>


