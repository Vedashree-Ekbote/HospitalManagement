            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
              <div class="card text-center">
                <div class="card-body">
                  <div class="list-group appt">
                    <a href="/appointment" onclick="return hidedetails()" id="hide" class="list-group-item list-group-item-action">
                      Book Appointment
                    </a>
                    <a href="#" onclick="return details()" class="list-group-item list-group-item-action">Detail Required for Booking Appointment</a>
            
                    <a href="#" onclick="return patientemailfordelete()" class="list-group-item list-group-item-action">Cancel Appointment</a>
                    </div>
                </div>
              </div>
              <div id="details">
              <!-- //details -->
              </div>
              <div id="hided">
                <!-- //details -->
                </div>
              <div class="details" id="detailshidden">
                <p class="font-italic detailtext">You need to provied patient information only.</p>
              </div>
              <div id="chkemail" class="details">
                  <form action="patientemailforcancle" method="POST">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Patient Email:</label>
                      <input type="email" name="email" class="form-control" id="exampleInputEmail1"
                        placeholder="Email for receipt Generation" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Email</button>
                  </form>
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title Cheader">Notifications</h5>
                  <p class="card-text notifytext">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  <a href="#" class="card-link">Visit our page</a>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
              <form action="/history" method="POST">
              <div class="form-group">
              <i class="fa fa-user icon"></yi>
              <input type="email"  name="email" class="form-control input-field" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email">
               
            </div>
            <button type="submit" class="btn btn-primary text-center w-100">submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
