     <script>
      function hidedetails(){
        document.getElementById('details').innerHTML = document.getElementById('hided').innerHTML;
      }
      function details(){
        document.getElementById('details').innerHTML = document.getElementById('detailshidden').innerHTML;
      }
      function patientemailfordelete(){
        document.getElementById("details").innerHTML= document.getElementById("chkemail").innerHTML;
      }
     </script>
