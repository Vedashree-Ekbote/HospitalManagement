}
.appt a{
    background-color : rgba(49, 40, 40, 0.012) !important;
    color: white !important;
    font-size: 25px;
    line-height: 60px ;
    
}
.appt a:hover{
    color: red !important;
}
.details{
    visibility: hidden;
    font-size: 22px !important;
    color: white !important;

