                  <div class="form-group">
                    <input type="hidden" name="_id" value="{{user._id}}">
                  </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Name of Patient:</label>
                      <input type="text" name="name" class="form-control" id="exampleInputName1" placeholder="PATIENT NAME"
